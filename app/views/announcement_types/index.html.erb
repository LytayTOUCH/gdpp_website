<div class="panel panel-primary" >
  <div class="panel-heading" >
    <b><%= t('dashboard.navigator_menu.announcement_type') %></b>
  </div>
  <div class="panel-body" >
    <table class="table table-bordered datatable" >
      <thead>
        <tr>
          <th><%= "#" %></th>
          <th><%= t('table.announcement_type') %></th>
          <th><%= t('table.announcement.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% no = 1; @announcement_types.each do |announcement_type| %>
          <tr>
            <td> <%= no %> </td>
            <td> <%= announcement_type.name %> </td>
            <td>
              <%= link_to t('form.actions.edit'), edit_announcement_type_path(announcement_type) , class: "btn btn-xs btn-primary"  %> | 
              <%= link_to t('form.actions.delete'),  { action: :destroy, id: announcement_type.id}, method: :delete, data: { confirm: 'Are you sure to delete announcement type ?' }, class: "btn btn-xs btn-danger" %>
            </td>
          </tr>

        <% no+= 1;  end %>
      </tbody>

    </table>
    
  </div>
  <div class="panel-footer" >
    <%= link_to t('form.button.add'), new_announcement_type_path, class: "btn btn-primary" %>
  </div>
</div>
