<% if admin_signed_in? %>
  <div class="row admin-nav" >
    <div class="col-xs-12" >
      <div class="row" >
        <div class="col-xs-9" >
          <%= link_to administrator_index_path, class: 'btn btn-default' do %>
            <i class="fa fa-dashboard"></i>
          <% end %>
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            លទ្ធកម្ម <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to t('dashboard.navigator_menu.announcement'), announcements_path, class: 'btn btn-default' %></li>
            <li><%= link_to t('dashboard.navigator_menu.announcement_type'), announcement_types_path, class: 'btn btn-default' %></li>
            <li><%= link_to t('dashboard.navigator_menu.budget_sources'), budget_sources_path, class: 'btn btn-default' %></li>
            <li><%= link_to t('dashboard.navigator_menu.procurement_plan'), procurement_plans_path, class: 'btn btn-default' %></li>
          </ul>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            អំពីស្ថាប័ន <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to t('dashboard.navigator_menu.procurement_entity'), procurement_entities_path, class: 'btn btn-default' %></li>
            <li><%= link_to t('dashboard.navigator_menu.law_regulation'), law_regulations_path, class: 'btn btn-default' %></li>
            <li><%= link_to t('dashboard.navigator_menu.public_services'), public_services_path, class: 'btn btn-default' %></li>
          </ul>
        </div>
	        <%= link_to t('dashboard.navigator_menu.faq'), faqs_path, class: 'btn btn-default' %>
          <%= link_to t('dashboard.navigator_menu.org_structure'), org_structures_path, class: 'btn btn-default' %>
        </div>
        <div class="col-xs-3" style="text-align:right" >
          <div class= 'btn btn-default'>
            <i class="fa fa-user"></i> <%= current_admin.username.capitalize %>
          </div>
          <%= link_to destroy_admin_session_path, :method => :delete, class: 'btn btn-default'  do%>
            <i class="fa fa-sign-out fa-lg"></i> <%=t('dashboard.navigator_menu.sign_out')%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>