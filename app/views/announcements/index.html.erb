<div class="panel panel-primary" >
  <div class="panel-heading" >
    <b><%= t('dashboard.navigator_menu.announcement') %></b>
  </div>
  <div class="panel-body" >
    <table class="table table-bordered datatable" >
      <thead>
        <tr class="text-nowrap" >
          <th>#</th>
          <th><%= t('table.announcement.title') %></th>
          <th><%= t('table.announcement.type') %></th>
          <th><%= t('table.announcement.PE') %></th>
          <th><%= t('table.announcement.budget_source') %></th>
          <!-- <th>Open register</th>
          <th>Close submit</th>
          <th>Open bidding</th> -->
          <th><%= t('table.announcement.public') %></th>
          <th><%= t('table.announcement.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% no = 1; @announcements.each do |announcement| %>
          <tr>
            <td> <%= no %> </td>
            <td width="300px" > <%= announcement.title %> </td>
            <td> <%= announcement.announcement_type.name %> </td>
            <td> <%= announcement.procurement_entity.name %> </td>
            <td> <%= announcement.budget_source.name %> </td>
            <!-- <td> <%= announcement.open_register_date %> </td>
            <td> <%= announcement.close_submit_date %> </td>
            <td> <%= announcement.open_bid_doc_date %> </td> -->
            <td>
            <%= "<p class='btn btn-xs btn-success' >Yes</p>".html_safe if announcement.public == true %>
            <%= "<p class='btn btn-xs btn-danger' >No</p>".html_safe if announcement.public == false %>
            </td>
            <td>
            <%= link_to t('form.actions.edit'), edit_announcement_path(announcement) , class: "btn btn-xs btn-primary"  %> 
              <%= link_to t('form.actions.delete'),  { action: :destroy, id: announcement.id}, method: :delete, data: { confirm: 'Are you sure to delete this announcement?' }, class: "btn btn-xs btn-danger" %>
              <%= link_to t('form.actions.show'), announcement_path(announcement) , class: "btn btn-xs btn-primary" %>
            </td>
          </tr>

        <% no+= 1;  end %>
      </tbody>

    </table>
    
  </div>
  <div class="panel-footer" >
    <%= link_to t('form.button.add'), new_announcement_path, class: "btn btn-primary" %>
  </div>
</div>
