<br>
<div class="panel panel-primary" >
  <div class="panel-heading" >
    <b>Announcement</b>
  </div>
  <div class="panel-body" >
    <table class="table table-bordered" >
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Type</th>
          <th>PE</th>
          <th>Budget source</th>
          <th>Open register</th>
          <th>Close submit</th>
          <th>Open bidding</th>
          <th>public</th>
          <th>action</th>
        </tr>
      </thead>
      <tbody>
        <% no = 1; @announcements.each do |announcement| %>
          <tr>
            <td> <%= no %> </td>
            <td> <%= announcement.title %> </td>
            <td> <%= announcement.announcement_type.name %> </td>
            <td> <%= announcement.procurement_entity.name %> </td>
            <td> <%= announcement.budget_source.name %> </td>
            <td> <%= announcement.open_register_date %> </td>
            <td> <%= announcement.close_submit_date %> </td>
            <td> <%= announcement.open_bid_doc_date %> </td>
            <td> <%= announcement.public %> </td>
            <td>
              <%= link_to "edit", edit_announcement_path(id:announcement.id ), class: "btn btn-xs btn-primary"  %> | 
              <%= link_to 'Delete', "#" , class: "btn btn-xs btn-danger" %>
            </td>
          </tr>

        <% no+= 1;  end %>
      </tbody>

    </table>
    
  </div>
  <div class="panel-footer" >
    <%= link_to "Add ", new_announcement_path, class: "btn btn-primary" %>
  </div>
</div>
