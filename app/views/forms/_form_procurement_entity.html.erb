<%= simple_form_for(@procurement_entity) do |f| %>
  <%= f.input :name %>
  <%= f.input :procurement_category_id, as: 'select', collection: @procurement_categories %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <%= f.input :website %>
  <%= f.input :logo, as: :file %>
  <% if @procurement_entity.new_record? %>
    <%= f.submit t('form.button.create'), class: 'btn btn-primary'%>
  <% else %>
    <%= f.submit t('form.button.update'), class: 'btn btn-primary'%>
  <% end %>
<% end %>