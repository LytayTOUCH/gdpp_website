<%= simple_form_for(@org_structure, html: { multipart: true }) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :org_structure_image, as: :file %>
  <% if @org_structure.new_record? %>
    <%= f.submit t('form.button.create'), class: 'btn btn-primary'%>
  <% else %>
    <%= f.submit t('form.button.update'), class: 'btn btn-primary'%>
  <% end %>
<% end %>