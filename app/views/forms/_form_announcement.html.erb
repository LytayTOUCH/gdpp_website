<!-- <%= debug @announcement %> -->
<%= simple_form_for(@announcement, html: { multipart: true }) do |f| %>
    <%= f.input :title %>
    <%= f.input :description, as:"text" %>
    <%= f.input :announcement_type_id, collection: @announcement_types %>
    <%= f.input :procurement_entity_id, collection: @procurement_entities %>
    <%= f.input :budget_source_id, collection: @budget_sources %>
    <%= f.input :open_register_date, as: :date_picker %>
    <%= f.input :close_submit_date, as: :date_picker %>
    <%= f.input :open_bid_doc_date, as: :date_picker %>
    <%= f.input :announcement_file, as: :file, class: 'btn btn-primary' %>
    <%= f.input :bidding_file, as: :file, class: 'btn btn-primary' %>
    <%= f.input :publish %>
    <%= f.submit t('form.button.submit'), class: 'btn btn-primary'%>
<% end >