<%= simple_form_for(@law_regulation, html: { multipart: true }) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :thumbnail, as: :file %>
  <%= f.input :law_doc_attachment, as: :file %>
  <% if @law_regulation.new_record? %>
    <%= f.submit t('form.button.create'), class: 'btn btn-primary'%>
  <% else %>
    <%= f.submit t('form.button.update'), class: 'btn btn-primary'%>
  <% end %>
<% end %>