<%= simple_form_for(@public_service) do |f| %>
  <%= f.input :name %>
  <%= f.input :position %>
  <%= f.input :phone %>
  <%= f.input :email %>
  <% if @public_service.new_record? %>
    <%= f.submit t('form.button.create'), class: 'btn btn-primary'%>
  <% else %>
    <%= f.submit t('form.button.update'), class: 'btn btn-primary'%>
  <% end %>
<% end %>