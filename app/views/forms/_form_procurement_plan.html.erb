<%= simple_form_for(@procurement_plan) do |f| %>
  <%= f.input :name %>
  <%= f.input :procurement_entity_id, collection: @procurement_entities %>
  <%= f.input :procurement_plan_type, collection:
    [['លទ្ធកម្មដើមឆ្នាំ', 'annual'],
    ['លទ្ធកម្មកែតម្រូវ', 'adjusted']] 
  %>
  <%= f.input :year %>
  <%= f.input :procurement_plan_file, as: :file %>
  <% if @procurement_plan.new_record? %>
    <%= f.submit t('form.button.create'), class: 'btn btn-primary'%>
  <% else %>
    <%= f.submit t('form.button.update'), class: 'btn btn-primary'%>
  <% end %>
<% end %>