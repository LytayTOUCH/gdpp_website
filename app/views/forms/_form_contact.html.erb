<%= simple_form_for(@contact) do |f| %>
  <%= f.input :location_name %>
  <%= f.input :phone_one %>
  <%= f.input :phone_two %>
  <%= f.input :phone_three %>
  <%= f.input :email_one %>
  <%= f.input :email_two %>
  <%= f.input :email_three %>
  <%= f.input :address_one, as: 'text' %>
  <%= f.input :address_two, as: 'text' %>
  <%= f.input :address_three, as: 'text' %>
  <% if @contact.new_record? %>
    <%= f.submit t('form.button.create'), class: 'btn btn-primary'%>
  <% else %>
    <%= f.submit t('form.button.update'), class: 'btn btn-primary'%>
  <% end %>
<% end %>