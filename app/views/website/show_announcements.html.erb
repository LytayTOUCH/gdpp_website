<div class="content  col-md-8 body">
  <div class="has-padding has-shadow" style="margin-bottom:10px;" >
    <b>
      <%= "តារាងនៃការផ្សព្វផ្សាយការដេញថ្លៃ - "  %>
      <%= params[:name] %>
    </b>
  </div>
  <br>
  <div class="box">
    <div class="box-body">
      <table border="1" id="datatables" class="table table-striped table-bordered dataTable" style="font-size: 13px;" >
        <thead>
          <tr>
            <th >#</th>
            <th ><%= "បរិយាយអំពីការដេញថ្លៃ" %></th>
            <th class="text-nowrap" ><%= "ស្ថាប័នអនុវត្តិលទ្ធកម្ម" %></th>
            <th class="text-nowrap" ><%= "ប្រភពមូលនិធិ" %></th>
          </tr>
        </thead>
        <tbody  >
          <% $i= 1; @announcements.each do |announcement| %>
            <tr>
              <td style="vertical-align: middle; text-align:center"><%= $i %></td>
              <td style="line-height: 24px;" >
              <%= link_to announcement.title , show_announcement_path(announcement) %>
              <%= "<span class= 'badge' style='background-color: #C50000; padding: 10px 5px 5px 5px;' >#{t('website.label.new')}</span>".html_safe if (Time.now.to_i/(60*60*24) - announcement.updated_at.to_i/(60*60*24))<=15 %>
              <br>
              <%= "សេចក្តីជូនដំណឹង៖" %>
              [
                <% if announcement.announcement_file? %>
                 <%= link_to "ភាសាខ្មែរ", announcement.announcement_file.url, target: '_blank' %>
                <% else %>
                  <%= "ពុំមានឯកសាភ្ជាប់" %>
                <% end %> </li>
              ]
              <br>
              <span>
                <%= "ដំណឹងដេញថ្លៃ៖" %>
                [
                  <% if announcement.bidding_file? %>
                   <%= link_to "ភាសាខ្មែរ", announcement.bidding_file.url, target: '_blank' %>
                  <% else %>
                    <%= "ពុំមានឯកសាភ្ជាប់" %>
                  <% end %> </li>
                ]
              </span>
              <br>

              <i style="font-size: 11px" ><%= "#{t('website.release_date')} #{announcement.updated_at.strftime("%B %d, %Y") }" %></i>
              </td>
              <td style="vertical-align:middle; line-height: 24px;" ><%= announcement.procurement_entity.name %></td>
              <td style="vertical-align:middle; line-height: 24px;" ><%= announcement.budget_source.name %></td>

            </tr>
          <% $i +=1; end %>

        </tbody>

      </table>
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</div>
<!-- /.content -->
