<div class="content  col-md-8 body">
  <div class="has-padding has-shadow" style="margin-bottom:10px;" >
    <b>
      <%= "តារាងនៃការប្រគល់កិច្ចសន្យា - " %>
      <%= params[:name] %>
    </b>
  </div>
  <br>
  <div class="box">
    <div class="box-body">
      <table border="1" id="datatables" class="table table-striped table-bordered dataTable" style="font-size: 13px;" >
        <thead>
          <tr>
            <th >#</th>
            <th ><%= "បរិយាយអំពីការប្រគល់កិច្ចសន្យា" %></th>
          </tr>
        </thead>
        <tbody  >
          <% $i= 1; @awarding_contracts.each do |awarding_contract| %>
            <tr>
              <td style="vertical-align: middle; text-align:center"><%= $i %></td>
              <td style="line-height: 24px;" >
              <%= link_to awarding_contract.title, show_awarding_contract_path(awarding_contract) %>
              <%= "<span class= 'badge' style='background-color: #C50000; padding: 10px 5px 5px 5px;' >#{t('website.label.new')}</span>".html_safe if (Time.now.to_i/(60*60*24) - awarding_contract.updated_at.to_i/(60*60*24))<=15 %>
              <br>
              <%= "ឯកសារនៃការប្រគល់កិច្ចសន្យា៖" %>
              [
                <% if awarding_contract.attachment_doc? %>
                 <%= link_to "ភាសាខ្មែរ", awarding_contract.attachment_doc.url, target: '_blank' %>
                <% else %>
                  <%= "ពុំមានឯកសាភ្ជាប់" %>
                <% end %> </li>
              ]
              <br>

              <i style="font-size: 11px" ><%= "#{t('website.release_date')} #{awarding_contract.updated_at.strftime("%B %d, %Y") }" %></i>
              </td>
            </tr>
          <% $i +=1; end %>

        </tbody>

      </table>
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</div>
<!-- /.content -->
