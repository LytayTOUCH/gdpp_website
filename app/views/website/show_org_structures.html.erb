<div class="content  col-md-8 body">
    <div class="has-padding has-shadow" style="margin-bottom:10px;" >
      <b>
        <%= "តារាងនៃរចនាសម្ព័ន - "  %>
        <%= @org_structure_category.name %>
      </b>
    </div>
    <br>
    <div class="box">
      <div class="box-body">
        <table border="1" class="table table-striped table-bordered dataTable">
        <% $i= 1; @org_structures.each do |org_structure| %>
          <tr>
            <td width='200px'>
              <% if org_structure.org_structure_image? %>
                <%= link_to org_structure.org_structure_image.url do %>
                  <%= image_tag org_structure.org_structure_image.url, width: '100%' %>
                <% end %>  
              <% else %>
                <%= "ពុំមានរូបភាព" %>
              <% end %>
            </td>
            
            <td>    
              Title : <%= org_structure.title %><br>
              Organization Structure Category : <%= org_structure.org_structure_category.name %><br>
              Description : <%= simple_format(org_structure.description) %>
            </td>
          </tr>  
        <% $i +=1; end %>  
      </table><br><br>

      </div><!-- /.box-body -->
    </div><!-- /.box -->
</div>
<!-- /.content -->
