<div class="panel panel-primary" >
  <div class="panel-heading" >
    <b><%= t('dashboard.navigator_menu.org_structure') %></b>
  </div>
  <div class="panel-body" >
    <table class="table table-bordered datatable" id="datatables" >
      <thead>
        <tr>
          <th>#</th>
          <th><%= t('table.org_structure.title') %></th>
          <th><%= t('table.org_structure.description') %></th>
          <th><%= t('table.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% no = 1; @org_structures.each do |org_structure| %>
          <tr>
            <td> <%= no %> </td>
            <td> <%= org_structure.title %> </td>
            <td> <%= org_structure.description %> </td>
            <td>
              <%= link_to t('form.actions.show'), org_structure_path(org_structure) , class: "btn btn-xs btn-success"  %>
              <%= link_to t('form.actions.delete'),  { action: :destroy, id: org_structure.id}, method: :delete, data: { confirm: "Are you sure to delete this structure ?" }, class: "btn btn-xs btn-danger" %>
              <%= link_to t('form.actions.edit'), edit_org_structure_path(org_structure) , class: "btn btn-xs btn-primary"  %>
            </td>
          </tr>
        <% no+= 1;  end %>
      </tbody>

    </table>
    
  </div>
  <div class="panel-footer" >
    <%= link_to t('form.button.add'), new_org_structure_path, class: "btn btn-primary" %>
  </div>
</div>
