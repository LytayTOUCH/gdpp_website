<div class="panel panel-default panel-primary">
  <div class="panel-heading"><%= t('dashboard.navigator_menu.user_manager') %></div>
  <div class="panel-body">
    <table class="table datatable" id="datatables">
      <thead>
        <tr>
          <th>#</th>
          <th><%= t('table.admin.username') %></th>
          <th><%= t('table.admin.email') %></th>
          <th><%= t('table.admin.position') %></th>
          <th><%= t('table.admin.phone') %></th>
          <th><%= t('table.admin.address') %></th>
          <th><%= t('table.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>1</td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.user_profile.position if !user.user_profile.nil? %> </td>
            <td><%= user.user_profile.phone if !user.user_profile.nil? %> </td>
            <td><%= user.user_profile.address if !user.user_profile.nil? %> </td>
            <td>
              <%= link_to t('form.actions.edit'), edit_admin_path(user), class: "btn btn-info btn-xs" %>
              <%= link_to t('form.actions.delete'), admin_path(user), method: :delete, data: { confirm: t('message.confirm.delete') + user.user_profile.name + '?'  } , class: "btn btn-danger btn-xs" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <%= link_to t('form.button.add'), new_admin_path, class: "btn btn-primary" %>
  </div>

</div>