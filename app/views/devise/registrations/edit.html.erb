<div class="panel panel-primary" >
  <div class="panel-heading" >Profile <%= resource_name.to_s.humanize %></div>
  <div class="panel-body" >
    <div class="col-xs-4 row " >
        <%= simple_form_for(resource, as: resource_name, url: update_admin_registration_path, html: { method: :put }) do |f| %>
          
          <div class="field">
            <!-- <%= f.label :email %><br /> -->
            <%= f.input :email, autofocus: true, class: "form-group" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.input :password, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.input :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.input :current_password, autocomplete: "off" %>
          </div>
          <div class="actions">
            <%= f.submit "Update", class: "btn btn-default" %>
          </div>
        <% end %>

        <!-- <h3>Cancel my account</h3> -->

        <!-- <p>Unhappy? <% button_to "Cancel my account", administrator_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->
    </div>
  </div><!-- /.panel body -->
  <div class="panel-footer" >
    <%= link_to "Back", :back, class: "btn btn-primary" %>
  </div>
</div>
<!-- /.panel -->
