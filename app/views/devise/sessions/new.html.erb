<br/>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="text-center">
      <%= image_tag 'MEF_logo', size: "128x128"%>
    </div>
    <h3 class = "text-center">ប្រព័ន្ធគ្រប់គ្រង់គេហទំព័រ</h3>
    <hr/>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>

      <div class="form-group field">
        <div class="col-sm-12">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user"></i></span>
            <%= f.text_field :login, autofocus: true, :class => 'form-control',  placeholder: 'អ៊ីម៉ែល ឬ ឈ្មោះអ្នកប្រើប្រាស់' %>
          </div>
        </div>
      </div>

      <div class="form-group field">
        <div class="col-sm-12">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control',  placeholder: 'ពាក្យសំងាត់'%>
          </div>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group field">
          <div class="col-sm-12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'ចងចាំការប្រើប្រាស់' %>
          </div>
        </div>
      <% end -%>

      <div class=" form-group actions">
        <div class="col-sm-12">
          <%= f.submit "ចូលប្រើប្រាស់", :class => "btn btn-default" %>
        </div>
      </div>

    <% end %>
  </div>
</div>