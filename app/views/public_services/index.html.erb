<br>
<div class="panel panel-primary" >
  <div class="panel-heading" >
    <b><%= "Public Services" %></b>
  </div>
  <div class="panel-body" >
    <table class="table table-bordered datatable" >
      <thead>
        <tr>
          <th><%= "#" %></th>
          <th><%= "Name" %></th>
          <th><%= "Position" %></th>
          <th><%= "Phone" %></th>
          <th><%= "Email" %></th>
          <th><%= "Action" %></th>
        </tr>
      </thead>
      <tbody>
        <% no =1; @public_services.each do |ps| %>
          <tr>
            <td><%= no %></td>
            <td><%= ps.name %></td>
            <td><%= ps.position %></td>
            <td><%= ps.phone %></td>
            <td><%= ps.email %></td>
            <td>
              <%= link_to "Edit", edit_public_service_path(ps), class: "btn btn-xs btn-primary" %>
              <%= link_to 'Delete',  { action: :destroy, id: ps.id}, method: :delete, data: { confirm: "Are you sure to delete [ #{ps.name} ] from public service?"  }, class: "btn btn-xs btn-danger" %>
            </td>
          </tr>
        <% no +=1; end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer" >
    <%= link_to "Add ", new_public_service_path, class: "btn btn-primary" %>
  </div>
</div>
